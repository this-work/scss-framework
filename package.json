	},
	"peerDependencies": {
		"sass": "^1.77.8"
	},
	"devDependencies": {
		"handlebars": "^4.7.7",
		"prettier": "^2.8.4",
		"sassdoc": "^2.7.4",
		"sassdoc-theme-documentation-theme": "file:documentation-theme",
		"serve": "^14.2.0",
		"stylelint": "^15.1.0",
		"stylelint-config-property-sort-order-smacss": "^9.1.0",
